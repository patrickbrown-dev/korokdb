<%= form_with(model: [:admin, cartridge]) do |form| %>
  <% if cartridge.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(cartridge.errors.count, "error") %> prohibited this cartridge from being saved:</h2>

      <ul>
        <% cartridge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :game_id, style: "display: block", class: "form-label" %>
    <%= form.select :game_id, options_from_collection_for_select(Game.all, :id, :title), {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :code, style: "display: block", class: "form-label" %>
    <%= form.text_field :code, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :build, style: "display: block", class: "form-label" %>
    <%= form.text_field :build, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :revision, style: "display: block", class: "form-label" %>
    <%= form.text_field :revision, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :region, style: "display: block", class: "form-label" %>
    <%= form.select :region, options_for_select([['USA', 'usa'], ['JPN', 'jpn'], ['EUR', 'eur'], ['AUS', 'aus']]), {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :game_version, style: "display: block", class: "form-label" %>
    <%= form.text_field :game_version, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
