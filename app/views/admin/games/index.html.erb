<p style="color: green"><%= notice %></p>

<h1>Games</h1>

<table class="table table-hover" id="games">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Cartridges</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <%= render game %>
    <% end %>
  </tbody>
</table>

<%= link_to "New game", new_admin_game_path %>
